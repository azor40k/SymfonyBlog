{% extends 'base.html.twig' %}

{% block title %}Category List{% endblock %}

{% block body %}

{{ include('admin/table-scroll.html.twig') }}
{{ include('admin/admin-menu.html.twig') }}
    <h1>Category List</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Title</th>
                <th>Article</th>
                <th>actions</th>
                <th></th>
            </tr>
        </thead>
        <div>
        <tbody>
        

        {% for category in categories %}

        {% set n = 0 %}
        {% for x in article %}
        {% if x.category.id == category.id %}
        {% set n = n + 1 %}
        {% endif %}
        {% endfor %}
        
            <tr>
                <td>{{ category.title }}</td> 
                <td>{{n}}</td>                
                <td>
                    <a class="btn btn-primary" href="{{ path('category_edit', {'id': category.id}) }}">Edit</a>                    
                </td>

                <td>{{ include('category/_delete_form.html.twig') }}</td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('category_new') }}">Create new</a>

    

{% endblock %}
